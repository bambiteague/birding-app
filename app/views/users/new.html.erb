<h1> Sign Up </h1>

  <%=  form_for(@user, url: '/signup') do |f|%>

    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <br>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email, required:true %>
    <br>
    <br>
    <%= f.label :location %>
    <%= f.text_field :location %>
    <br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
     <%= f.label "(must be 6-20 characters long)" %>
    <br>
    <br>
    <%= f.submit "Submit" %>

  <% end %>
